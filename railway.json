{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd src/server && npm install",
    "startCommand": "cd src/server && npm start"
  },
  "deploy": {
    "startCommand": "cd src/server && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}